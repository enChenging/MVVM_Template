<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        Customize your theme here.
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppLauncher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <!--main_tab_bottom-->
    <style name="MainTabBottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/tab_normal_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_up</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--MyDialog-->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="NewsContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SpecialText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/special_text</item>
    </style>

    <style name="NewsTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

</resources>
